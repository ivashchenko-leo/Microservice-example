{
  "configuration": {
    "name": "Log4j2Config",
    "properties": {},
    "appenders": {
      "Console": { "name": "STDOUT",
        "PatternLayout": { "pattern": "%d %p %c{1.} [%t] %m%n" },
        "ThresholdFilter": { "level": "debug" }
      }
    },
    "loggers": {
      "root": { "level": "debug", "AppenderRef": { "ref": "STDOUT" }}
    }
  }
}